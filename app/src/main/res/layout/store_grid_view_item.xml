<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/store_grid_view_item_size"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="@dimen/small_img_size"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:src="@drawable/default_product_image" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/primaryText"
        tools:text="Product name" />

    <TextView
        android:id="@+id/product_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/secondaryText"
        tools:text="quantity" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/primaryText"
        tools:text="price" />

    <Button
        android:id="@+id/sell_product_button"
        style="@style/ButtonStyle"
        android:layout_width="@dimen/medium_button_size"
        android:layout_height="@dimen/medium_button_size"
        android:layout_gravity="center"
        android:text="@string/sell" />

</LinearLayout>